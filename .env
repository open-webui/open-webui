# Open WebUI Configuration
WEBUI_SECRET_KEY=your-secret-key-here
OPEN_WEBUI_PORT=3000
WEBUI_DOCKER_TAG=main
OLLAMA_DOCKER_TAG=latest

# Authentication
ENABLE_SIGNUP=true
DEFAULT_USER_ROLE=pending
WEBUI_AUTH=true

# OpenAI Integration (optional)
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your-openai-api-key-here

# Search Integration
ENABLE_RAG_WEB_SEARCH=true
RAG_WEB_SEARCH_ENGINE=searxng
SEARXNG_QUERY_URL=http://searxng:8080/search?q=<query>

# Image Generation (optional)
ENABLE_IMAGE_GENERATION=true
AUTOMATIC1111_BASE_URL=http://automatic1111:7860
COMFYUI_BASE_URL=

# Audio/TTS (optional)
AUDIO_TTS_ENGINE=openai
AUDIO_TTS_API_KEY=your-tts-api-key
AUDIO_STT_ENGINE=openai
AUDIO_STT_API_KEY=your-stt-api-key

# Database (optional - for advanced features)
POSTGRES_USER=openwebui
POSTGRES_PASSWORD=your-secure-password-here

# RAG and Embeddings
ENABLE_RAG_HYBRID_SEARCH=true
RAG_EMBEDDING_ENGINE=ollama
RAG_EMBEDDING_MODEL=mxbai-embed-large
CHUNK_SIZE=1000
CHUNK_OVERLAP=100

# Task Model
TASK_MODEL=llama3.1:8b

# UI Customization
DEFAULT_MODELS=llama3.1:8b,codellama:7b
ENABLE_COMMUNITY_SHARING=true
SHOW_ADMIN_DETAILS=true

# Performance
ENABLE_EVALUATION_ARENA_MODELS=true
ENABLE_RETRIEVAL_QUERY_GENERATION=true
