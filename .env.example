# Copy this file to .env at the PROJECT ROOT (same folder as backend/ and src/).
# The backend loads .env from the project root only. Restart the backend after editing.

# Ollama: model list + local inference. Path '/ollama' is proxied to this URL.
OLLAMA_BASE_URL='http://localhost:11434'

# OpenAI: set OPENAI_API_KEY so the model selector can list OpenAI models.
# OPENAI_API_BASE_URL is optional (default: https://api.openai.com/v1).
OPENAI_API_BASE_URL=''
OPENAI_API_KEY=''

# AUTOMATIC1111_BASE_URL="http://localhost:7860"

# For production, you should only need one host as
# fastapi serves the svelte-kit built frontend and backend from the same host and port.
# To test with CORS locally, you can set something like
# CORS_ALLOW_ORIGIN='http://localhost:5173;http://localhost:8080'
CORS_ALLOW_ORIGIN='*'

# For production you should set this to match the proxy configuration (127.0.0.1)
FORWARDED_ALLOW_IPS='*'

# DO NOT TRACK
SCARF_NO_ANALYTICS=true
DO_NOT_TRACK=true
ANONYMIZED_TELEMETRY=false