# Environment Variables Template
# Copy to .env and fill in actual values

# Client Identification
CLIENT_ID=client-id
CLIENT_NAME="Client Name"

# Authentication Secrets
WEBUI_SECRET_KEY=generate-a-secure-random-key-here
JWT_SECRET_KEY=another-secure-random-key

# Database (if using external)
DATABASE_URL=postgresql://user:password@localhost:5432/mai_client

# API Keys (if enabled)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# OIDC Configuration (if using)
OIDC_CLIENT_ID=mai-client
OIDC_CLIENT_SECRET=secret
OIDC_ISSUER=https://auth.client.com/realms/mai
OIDC_REDIRECT_URI=https://ai.client.com/auth/oidc/callback

# Email Configuration
SMTP_HOST=smtp.client.com
SMTP_PORT=587
SMTP_USER=noreply@client.com
SMTP_PASSWORD=password
SMTP_FROM=mAI <noreply@client.com>

# Monitoring
SENTRY_DSN=https://...@sentry.io/...
PROMETHEUS_METRICS=true

# Custom Settings
CUSTOM_FEATURE_FLAG_1=true
CUSTOM_FEATURE_FLAG_2=false