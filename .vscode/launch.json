{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Docker Attach (Open WebUI)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": true,
            "dockerOptions": {
                "containerName": "open-webui"
            }
        }
    ]
}
