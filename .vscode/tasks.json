{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build RAUX Installer",
			"type": "shell",
			"command": "makensis",
			"args": [
				"${workspaceFolder}/installer/Installer-UX.nsi"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
        {
            "label": "Run RAUX Installer",
            "type": "shell",
            "command": "${workspaceFolder}\\installer\\Installer-UX.exe",
            "dependsOn": ["Build RAUX Installer"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
		{
			"label": "Run RAUX Prebuild",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy", "ByPass", "-File", "${workspaceFolder}/installer/raux_prebuild.ps1",
				"${input:rauxPrebuildSwitch}"
			],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Clean RAUX Environment: AppData",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"conda deactivate & rmdir /s /q \"%LOCALAPPDATA%\\GAIA\\RAUX\" & del /f /q \"%USERPROFILE%\\Desktop\\GAIA-UI-BETA.lnk\" & conda env remove -p \"%LOCALAPPDATA%\\GAIA\\RAUX\\raux_env\" -y"
			],
			"presentation": {
				"reveal": "silent",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Clean RAUX: Development",
			"type": "shell",
			"command": "rm",
			"args": [
				"-rf",
				"${workspaceFolder}/backend/data/cache/",
				"${workspaceFolder}/backend/data/uploads/",
				"${workspaceFolder}/backend/data/vector_db/",
				"${workspaceFolder}/backend/data/webui.db"
			],
			"presentation": {
				"reveal": "always",
				"panel": "new",
				"close": true
			},
			"problemMatcher": []
		},
		{
			"label": "start-frontend",
			"type": "npm",
			"script": "dev",
			"isBackground": true,
			"problemMatcher": {
				"owner": "vite",
				"pattern": {
					"regexp": "."
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*VITE.*",
					"endsPattern": ".*ready in.*ms"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "start-backend",
			"type": "shell",
			"command": "cd ${workspaceFolder}/backend && sh dev.sh",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "."
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "INFO:     Uvicorn running on",
					"endsPattern": "INFO:     Application startup complete"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "start-faull-stack",
			"dependsOn": [
				"start-backend",
				"start-frontend"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "terminate-frontend",
			"type": "shell",
			"command": "echo ${input:terminateFrontend}",
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "terminateFrontend",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "start-frontend"
		},
		{
			"id": "rauxPrebuildSwitch",
			"type": "pickString",
			"description": "Select RAUX Prebuild switch (no value needed)",
			"options": [
				"-solution_version",
				"-build_frontend",
				"-build_backend",
				"-package"
			],
			"default": "-solution_version"
		}
	]
}