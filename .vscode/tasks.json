{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "start-frontend",
			"type": "npm",
			"script": "dev",
			"isBackground": true,
			"problemMatcher": {
				"owner": "vite",
				"pattern": {
					"regexp": "."
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*VITE.*",
					"endsPattern": ".*ready in.*ms"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "start-backend",
			"type": "shell",
			"command": "cd ${workspaceFolder}/backend && sh dev.sh",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "."
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "INFO: Uvicorn running on",
					"endsPattern": "INFO: Application startup complete"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "start-faull-stack",
			"dependsOn": [
				"start-backend",
				"start-frontend"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "terminate-frontend",
			"type": "shell",
			"command": "echo ${input:terminateFrontend}",
			"problemMatcher": []
		},
		{
			"label": "Build Electron Windows Installer",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy", "Bypass",
				"-File", "${workspaceFolder}/local-dev-build.ps1"
			],
			"presentation": {
				"reveal": "always",
				"panel": "new",
				"close": true
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Clean RAUX Environment: AppData",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"rmdir /s /q \"%LOCALAPPDATA%\\raux\" & rmdir /s /q \"%APPDATA%\\raux\""
			],
			"presentation": {
				"reveal": "silent",
				"panel": "new",
				"close": true
			},
			"problemMatcher": []
		},
		{
			"label": "Clean RAUX: Development",
			"type": "shell",
			"command": "rm",
			"args": [
				"-rf",
				"${workspaceFolder}/backend/data/cache/",
				"${workspaceFolder}/backend/data/uploads/",
				"${workspaceFolder}/backend/data/vector_db/",
				"${workspaceFolder}/backend/data/webui.db"
			],
			"presentation": {
				"reveal": "always",
				"panel": "new",
				"close": true
			},
			"problemMatcher": []
		},
	],
	"inputs": [
		{
			"id": "terminateFrontend",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "start-frontend"
		}
	]
}